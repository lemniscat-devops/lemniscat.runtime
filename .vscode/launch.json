    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: lem",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/lemniscat/runtime/lem.py",
            "console": "integratedTerminal",
            "subProcess": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src",
                "LEM_DEBUG": "1"
            },
            "args": [
                "-m",
                "${workspaceFolder}/sample/manifest.yml",
                "-s",
                "['pre:all']",
                "-c",
                "['${workspaceFolder}/sample/configDomain.json', '${workspaceFolder}/sample/configEnv.json']",
                "-l",
                "DEBUG"
            ]
        }
    ]
}